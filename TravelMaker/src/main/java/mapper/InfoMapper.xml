<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.InfoMapper">

  <insert id="upload" parameterType="InfoDTO">
  insert into info_trade(user_id, info_title, info_content) values(#{user_id}, #{info_title}, #{info_content})
  </insert>
    
   <select id="showInfo" parameterType="InfoDTO" resultType="InfoDTO">
   	select * from info_trade where user_id = #{user_id}
   </select> 
   
</mapper>